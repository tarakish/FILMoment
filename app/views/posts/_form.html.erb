<div class="row mb-5 mt-5">
  <div class="col-lg-10 offset-lg-1 rounded py-3" style="background-color:#a6b6a3; color:#f7edd9;">

    <%= form_with model: post, url:[actor, post], id: "new_post", local: true do |f| %><%#idを付与しているのは下のエラーメッセージのパーシャルの位置を判定するため %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.label :scene %>
        <%= f.text_area :scene, class: 'form-control', id: 'js-new-post-scene', row: 4, placeholder: '好きなシーン、見どころなど' %>
      </div>
      <div class="form-group">
        <%= f.label :film_title %>
        <%= f.text_field :film_itle, class: 'form-control', id: 'js-new-post-title', placeholder: '作品名' %>
      </div>
      <div class="form-group">
        <%= f.label :author %>
        <%= f.text_field :author, class: 'form-control', id: 'js-new-post-author', placeholder: '投稿者名' %>
      </div>
      <%= f.submit '語る！',class: 'btn btn-outline-secondary' %>
    <% end %>
  </div>
</div>
