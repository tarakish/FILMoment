
<tr id="post-<%= post.id %>">
  <td class="pb-2">
    <div id="js-post-<%= post.id %>" class="pb-1 post-scene">
      <%= simple_format(post.scene) %>
    </div>
    <h3 class="small"><%= post.film_title %>Ôºè<%= post.author %> - <%= link_to post.actor.name, actor_path(post.actor), class: "edit-link-with-u" %></h3>
  </td>
  <td>
    <div class="list-inline justify-content-center mr-4 mt-2" style="float: right;">
        <%= link_to post_likes_path(post), method: post, remote: true do %>
          <i class="far fa-heart size"></i>
        <% end %>
        <h3 class="small mt-2 ml-1 likes"><%= post.likes.count %></h3>
  </td>
</tr>